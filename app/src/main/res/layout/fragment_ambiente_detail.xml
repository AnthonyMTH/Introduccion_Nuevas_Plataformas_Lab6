<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAE5D3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen del Ambiente -->
        <ImageView
            android:id="@+id/image_view_ambiente"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/noimagenfound" />

        <!-- Título del Ambiente -->
        <TextView
            android:id="@+id/text_view_ambiente_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Patio Simón Bolívar"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Descripción del Ambiente -->
        <TextView
            android:id="@+id/text_view_ambiente_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Lideró las campañas que dieron la independencia a varias naciones americanas..."
            android:textSize="16sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp" />

        <!-- Botón de Acción -->
        <Button
            android:id="@+id/button_regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Regresar" />

    </LinearLayout>
</ScrollView>
